.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #e0f7fa;
}

.cover-container, .lyrics-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cover {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  margin-bottom: 20px;
}

.title, .artist {
  font-size: 20px;
  margin: 5px 0;
}

.lyrics-container {
  width: 100%;
  height: 300px;
  overflow-y: auto;
  text-align: center;
}

.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 20px;
}

.buttons {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

button {
  padding: 10px 20px;
  font-size: 16px;
}

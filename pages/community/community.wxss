.audio-box {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  backdrop-filter: blur(10px); /* 背景模糊效果 */
  margin: 20rpx 0;
  display: flex;
  /* flex-direction: column; */
  justify-content: center; 
  align-items: center; /* 垂直居中 */
  /* padding-top: 20rpx; 添加顶部内边距 */
}

.cover-image {
  width: 250rpx; /* 设置图片宽度 */
  height: 250rpx; /* 设置图片高度 */
  border-radius: 20rpx;
  flex-shrink: 0; /* 防止图片缩小 */
}

.play-button {
  position: absolute; /* 开启绝对定位 */
  bottom: 10rpx; /* 与底部的距离 */
  right: 10rpx; /* 与右边的距离 */
  width: 20%;
  height: 30%;
  padding: 10rpx 20rpx;
  background-color: rgba(21, 0, 97, 0.6);
  color: rgb(255, 255, 255);
  text-align: center;
  border-radius: 20rpx;
}

.song-title {
  position: absolute; /* 开启绝对定位 */
  top: 20rpx; /* 与顶部的距离 */
  left: 280rpx; /* 与左边的距离 */
  font-size: 20px;
  font-weight: bolder;
  color: #333;
  flex-grow: 1; /* 让标题根据空间自动调整 */
  overflow: hidden; /* 防止标题溢出 */
  /* 防止标题换行 */
  white-space: nowrap; 
  text-overflow: ellipsis; /* 当标题太长时显示省略号 */
}

.lyric-scroll {
  height: 100rpx; /* 设置滚动区域的高度 */
}
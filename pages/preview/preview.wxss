.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  /* display: flex; */
  justify-content: center;
  align-items: center;
}
.bg-color {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #1B1C1F;
  z-index: -3;
}
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  position: relative;
}

.header-title {
  font-size: 32px; /* 调整字体大小为32px */
  line-height: 38px;
  font-weight: bold;
  color: white;
}

.save-button {
  font-size: 16px;
  line-height: 38px;
  font-weight: semibold;
  color: #ffffff;
  position: absolute; /* 使用绝对定位 */
  top: 16px; /* 距离顶部的距离 */
  right: -40px; /* 距离右侧的距离 */
  background: none; /* 设置背景为透明 */
  border: none; /* 移除边框 */
}

.poster {
  display: flex;
  position: relative;
  width: 70%; /* 海报宽度 */
  height: 80%;
  max-width: 500px;
  aspect-ratio: 7 / 8; /* 保持宽高比 */
  border: 2px solid white; /* 白色边框 */
  box-shadow: 0 4px 10px rgba(255, 255, 255, 0.6); /* 阴影效果 */
  align-items: center;
  justify-content: center;
  border-radius: 25px;
  margin: auto;
}
.poster-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(5px);
  z-index: -1;
  opacity: 0.7;
}

.overlay {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: white;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 18px;
  color: white;
  margin-bottom: 20px;
}

.play-button {
  background: none;
  border: none;
}

.play-icon {
  width: 50px;
  height: 50px;
  margin-top: 20px;
}

.share-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 25px;
  object-fit: cover;
}

.pay-button {
  background: linear-gradient(90deg, 
    rgba(230, 49, 255, 0.5) 0%, 
    rgba(175, 44, 249, 0.5) 21%, 
    rgba(103, 38, 242, 0.5) 50%, 
    rgba(26, 141, 246, 0.5) 73%, 
    rgba(50, 201, 252, 0.5) 100%
  );

  color: white;
  padding: 10px 20px;
  border-radius: 15px;
  text-align: center;
  line-height: 140%;
  width: 50%;
  font-size: 18px;
  font-weight: bold;
  position: fixed; /* 固定在底部 */
  bottom: 10px; /* 距离底部0 */
  left: 100px; /* 距离左边0 */
  z-index: 1000; /* 确保在最上层 */
}


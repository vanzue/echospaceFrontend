/* container */
.container {
  background-color: black;
  color: white;
  padding: 16px;
  min-height: 100vh;
}

/* header */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  position: relative;
}


.title {
  font-size: 20px; /* 调整字体大小为32px */
  line-height: 26px;
  font-weight: bold;
  margin-bottom: 10px;
}

.save {
  font-size: 16px;
  line-height: 38px;
  font-weight: semibold;
  color: #ffffff;
  position: absolute;
  right: 16px;
  top: 40px;
}

/* content */
.content {
  margin-top: -10px;
}

/* section */
.section {
  margin-bottom: 20px;
  background-color: #000000;
  border-radius: 15px;
  margin-left: 5px;
  margin-right: 5px;
  /* margin-top: -10px; */
  padding: 15px;
}

.label {
  font-size: 13px;
  font-weight: bold;
  margin-top: 10px;
  margin-bottom: 10px;
  display: block;
  padding-left: 140px;
}

/* music card */
.music-card {
  position: relative;
  /* display: flex; */
  align-items: center;
  margin-top: 10px;
  padding: 10px;
  border-radius: 30px;
  background-color: #343434;
  overflow: hidden;
  
}
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  filter: blur(15px);
  /* z-index: -1; */
  opacity: 0.5;
}
.music-card {
  position: relative;
  z-index: 1;
  align-items: center;
}

.music-image {
  width: 100px;
  height: 100px;
  border-radius: 25px;
  /* position: absolute; */
  top: 10px;
  left:10px;
}

.music-info {
  /* margin-left: 120px; */
}

.music-title {
  color: white;
  font-weight: bold;
  position: absolute;
  left: 140px;
  top: 20px;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: calc(100% - 140px); /* Ensure it doesn't overflow the container */
}



.lyric-scroll {
  max-height: 40px; /* 设置最大高度 */
  padding: 10px;
}

.lyric {
  display: block; /* 将歌词文本元素设置为块级元素 */
  text-align: center; /* 设置歌词文本左对齐 */
}


.music-controls {
  margin-top: 10px;
}

.slider-container {
  display: flex;
  align-items: center;
}

.time {
  width: 50px;
  text-align: center;
}

.custom-slider {
  flex: 1;
  margin: 0 10px;
}


.play-button {
  position: absolute;
  right: -60px;
  bottom: 40px; /* Adjust as needed */
  background: none;
  border: none;
}

.gift-play-button {
  position: absolute;
  bottom: 50px; /* Adjust as needed */
  background: none;
  border: none;
}

.play-icon {
  width: 44px;
  height: 44px;
}

.expand-button {
  position: absolute;
  top: 5px;
  right: 10px;
  width: 40px !important; /* 设置按钮宽度 */
  height: 40px; /* 设置按钮高度 */
  background-color: rgba(231, 228, 228, 0.336); /* 设置背景透明 */
  border-radius: 15px; /* 设置圆角 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px; /* 调整字体大小 */
  font-weight: bold; /* 加粗字体 */
  padding: 0; /* 确保没有填充影响大小 */
}

/* benefits and packages */
.benefits-section{
  margin-bottom: 10px;
  background-color: #1B1C1F;
  border-radius: 15px;
  margin-left: 10px;
  margin-right: 10px; /* 增加右侧空白 */
  margin-top: 5px;
  padding: 10px 15px; /* 增加填充以留出空间 */
  overflow: hidden;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  color: rgb(255, 255, 255);
  margin-bottom: 10px;
  padding-left: 10px;
}

.benefits-scroll,
.packaging-scroll {
  display: flex;
  overflow-x: scroll;
  white-space: nowrap;
}

.benefit-item {
  display: inline-block;
  text-align: center;
  margin-right: 30rpx;
  margin-top: 0px;
}

.benefit-video {
  width: 80px;
  height: 80px;
  border-radius: 8.61px;
  padding: 0px;
}

.benefit-details {
  color: #fff;
  margin-top: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  font-weight: bold;
}

.benefit-price {
  margin-top: -5px;
  margin-bottom: -5px;
}

.benefit-quantity {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 12px;
}

.benefit-quantity button {
  width: 20px !important;
  height: 20px !important;
  color: #fff;
  background-color: #3A3B3F;
  border: none;
  border-radius: 50% !important;
  text-align: center;
  /* line-height: 20px !important; */
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  margin: 0 10rpx;
}

/* 弹窗样式 */
.gift-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(49, 47, 47, 0.85);
  border-radius: 15px;
  padding: 20px;
  max-width: 80%;
  max-height: 80%;
  overflow: auto;
  z-index: 9999;
  display: none; /* 默认隐藏 */
}

.gift-popup-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.gift-video {
  width: 200px;
  height: 200px;
  border-radius: 10px;
  /* 去除旋转动画 */
}


.gift-description {
  color: white;
  font-weight: bold;
  font-size: 20px;
  margin-top: 40px;
  margin-bottom: 0px; /* 添加底部间距 */
}

.gift-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

.gift-controls .play-button {
  margin-right: 56px;
  margin-bottom: 30px; /* 添加底部间距 */
}
/* 调整播放按钮大小 */
.play-button {
  background: none;
  border: none;
}

.play-icon {
  width: 30px; /* 调整播放图标宽度 */
  height: 30px; /* 调整播放图标高度 */
}

.gift-controls .gift-description {
  color: white;
}

.gift-close-button {
  margin-top: 40px; /* 为关闭按钮添加一些顶部间距 */
  background-color: rgb(255, 255, 255, 0.7); /* 白色背景 */
  color: rgb(0, 0, 0); /* 黑色文字 */
  padding: 5px 30px; /* 增加按钮内边距 */
  border: none;
  border-radius: 5px; /* 添加圆角 */
  font-size: 18px; /* 增大字体 */
  font-weight: bold;
  cursor: pointer;
}

.show-popup {
  display: block; /* 控制弹窗显示 */
}

@keyframes rotate {
  from {
    transform: rotate(0deg); /* 从0度开始旋转 */
  }
  to {
    transform: rotate(360deg); /* 旋转360度 */
  }
}


.total-price {
  text-align: right;
  color: #fff;
  margin: 20rpx;
  font-size: 18px;
}

.packaging-image {
  width: 89.73px;
  height: 89.73px;
  border-radius: 8.61px;
  margin-right: 30rpx;
  margin-top: 20px;
}

/* footer */
.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}
/* 加号 */
.plus-section {
  display: flex;
  padding-left: 15px;
  margin: 0px 0;
}

.plus-widget {
  width: 25%;
  height: 25%;
  padding-left: 0%;
  padding-bottom: 25%; /* 1:1 aspect ratio */
  position: relative;
  background-color: rgba(71, 68, 68, 0.363);
  border-radius: 20px;
  justify-content: center; /* 居中对齐 */
  align-items: center; /* 垂直居中 */
 
}

.widget-image {
  width: 80%;
  height: auto;
  position: absolute;
  top: 10px;
  left: 10px;
  border-radius: 28px;
  object-fit: cover;
}
/* Tags section */
.tags-section {
  display: flex;
  /* flex-direction: column; */
  margin-top: 4px;
  margin-left: -10px;
  background-color: #1B1C1F;
  border-radius: 15px;
  padding: 10px;
}

.tags-container {
  display: inline-flex;
  flex-wrap: wrap;
  gap: 5px; /* Space between tags */
  align-items: center;
  /* justify-content: center;  */
}

.tag {
  background-color: #444;
  color: white;
  border: none;
  border-radius: 15px;
  font-size: 12px;
  cursor: pointer;
  white-space: nowrap;
  flex: 1 0 17%;
  margin: 0px; /* 调整按钮之间的间距 */
  height: 26.16px;
  line-height: 26.16px;
  border: none;
  text-align: center;
  padding: 0 2px;
}
.tag.selected {
  background-color: rgba(143, 22, 143, 0.582); /* 修改选中状态的背景色 */
}

.dropdown-button {
  background-color: #666;
  margin-left: auto;
  color: white;
  border: none;
  border-radius: 15px;
  padding: 5px 15px;
  font-size: 14px;
  flex: 1 0 17%;
  cursor: pointer;
}
.new-widgets-section {
  margin: 8px 8px;
  overflow: hidden;
}

.horizontal-scroll {
  /* display: flex;
  flex-wrap: nowrap; */
  display: flex;
  height: 150px;
  flex-wrap: nowrap;
  overflow-x: scroll;
  white-space: nowrap;
  /* white-space: nowrap; */
}

.new-widget {
  display: inline-block;
  flex: 0 0 auto; /* 确保子元素不会换行 */
  width: 150px; /* 调整为适合的宽度 */
  height: 150px; /* 调整为适合的高度 */
  margin-right: -70px; /* 添加右间距 */
  margin-left: 0px;
  position: relative;
  text-align: center;
}

.widget-video {
  width: 50%;
  height: 50%;
  border-radius: 20px;
  display: block; /* 确保是块级元素 */
  object-fit: cover;
}

.widget-text {
  margin-top: 10px;
  margin-left: -80px;
  color: white;
  display: block; /* 确保是块级元素 */
  font-size: 10px;
}


.preview-button {
  background: linear-gradient(90deg, 
    #E631FF 0%, 
    #AF2CF9 21%, 
    #6726F2 50%, 
    #1A8DF6 73%, 
    #32C9FC 100%
  );
  color: white;
  padding: 10px 20px;
  border-radius: 15px;
  text-align: center;
  line-height: 140%;
  width: 50%;
  font-size: 18px;
  font-weight: bold;
  position: fixed; /* 固定在底部 */
  bottom: 10px; /* 距离底部0 */
  left: 120px; /* 距离左边0 */
  z-index: 1000; /* 确保在最上层 */
}

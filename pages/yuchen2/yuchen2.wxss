.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.heading-component1 {
  display: flex;
  gap: 10px;
  align-items: center;
}

.title {
  font-size: 36px;
  color: white;
  font-weight: bold;
  margin: 15px;
}

/* 描述 */
.description {
  font-size: 16px;
  color: #B1B1B1;
  line-height: 16px;
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-weight: bold;
}

.circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #0000ff; /* Blue */
}

.main-image {
  position: relative;
  margin: 20rpx;
  text-align: center;
}

.main-img {
  width: 100%;
  height: 300rpx;
}

.product-description, .product-name {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  font-size: 30rpx;
}

.apply-button {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: #800080; /* Gradient equivalent */
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.sub-images {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.sub-img {
  width: 80rpx;
  height: 80rpx;
  background-color: #0000ff;
}

.categories {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.grid-img {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  background-color: #ff9999; /* Pink */
}

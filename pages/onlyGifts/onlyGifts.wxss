/* music card */
.music-card {
  position: relative;
  /* display: flex; */
  align-items: center;
  margin-left: -10px;
  margin-right: -10px;
  padding:10px;
  border-radius: 30px;
  background-color: #343434;
  overflow: hidden;
  
}
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  filter: blur(15px);
  /* z-index: -1; */
  opacity: 0.5;
}
.music-card .content {
  position: relative;
  z-index: 1;
  align-items: center;
}

.music-image {
  width: 100px;
  height: 100px;
  border-radius: 25px;
  /* position: absolute; */
  top: 0px;
  left:10px;
}


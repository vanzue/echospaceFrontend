  /* margin-left: 120px; */
}

.music-title {
  color: white;
  font-weight: bold;
  position: absolute;
  left: 140px;
  top: 10px;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: calc(100% - 140px); /* Ensure it doesn't overflow the container */
}



